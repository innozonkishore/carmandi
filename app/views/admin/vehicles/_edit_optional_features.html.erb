<h2><%= t(:Optional_Features) %></h2>

<% 	op_feat = @vehicle.optional_features
	 	if op_feat
  		optional_feature = op_feat.split(';')
		else
  		optional_feature = [""]
		end 
%>

<% @optional_features.each_with_index do |of, i| %>

<p class="<%= cycle('even','') %>">
	<span><%= of %></span>
	<%= radio_button_tag "of[#{i}]", "#{of}", optional_feature.include?(of)  %> <%= t(:Have) %>
	<%= radio_button_tag "of[#{i}]", 0, !optional_feature.include?(of) %> <%= t(:no_have) %>
</p>

<% end %>