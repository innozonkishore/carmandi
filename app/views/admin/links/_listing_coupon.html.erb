<% if coupon = listing.primary_coupon -%>
	<div style="position: absolute; overflow: visible;">
		<span class="listing_coupon">
			<p class="label"><%= coupon.name %></p>
			<p class="listing_coupon_image" onmouseover="show_coupon('<%= coupon.id %>');"> 
				<%= image_tag(coupon.public_filename(:thumb)) %></p>
			<p><a onclick ='print_coupon("<%= coupon.public_filename %>");' onmouseover = "change_cursor();" onmouseout = "change_cursor_again();"><%= t(:Print_Coupon) %></a></p>
			<p><%= link_to t(:See_more_coupons), coupon_list_coupons_path(:coupon_id => coupon.id) %></p>
		</span>	
		<div class="hidden_coupon" id="coupon_image_<%= coupon.id %>" onmouseout="hide_coupon('<%= coupon.id %>');">
			<%= image_tag coupon.public_filename(:hover) %>
		</div>
	</div>
<% end -%>