<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>
		<%= t(:Car_Mandi) %>
	</title>
	<%= javascript_include_tag 'prototype_1_5', 'prototype_ext.js' %>
	<%= stylesheet_link_tag 'reset', 'style', :media => "all" %>
	<link type="image/x-icon" href="/images/favicon.ico" rel="shortcut icon"/>

	<!--[if IE]>
      <%= stylesheet_link_tag "IE" -%>
    <![endif]-->
</head>
<body>
	<% if I18n.locale == 'hindi'
		  @hindi = true 
		elsif I18n.locale == 'urdu' 
			@urdu = true
		elsif I18n.locale == 'punjabi' 
			@punjabi = true
		else 
			@english = true
		end %>
	<div class="wrapper">
	    <div class="header">
		    <%= render :partial => 'shared/header' %>
		    <%= render :partial => 'shared/navigation' %>
		</div>    
		<div class="pageContent">
			<%= render :partial => 'shared/admin_navigation' %>
			
			<%= render :partial => 'shared/leftbar' %>
			<div class="midContent">
			    <% if flash[:notice] %>
    			<div class = 'notice'>
    				<%= flash[:notice] %>
    			</div>
    			<% end %>
    			<% if flash[:error] %>
    			<div class = 'notice'>
    				<%= flash[:error] %>
    			</div>
    			<% end %>
				<%= yield %>
			</div>
			<%= render :partial => 'shared/rightbar' %>
		</div>
		<%= render :partial => 'shared/footer' %>
	</div>
</body>
</html>
