<% if AdLocation.bottom_row_left_ad(left)[0] == '0' %>
	<%= AdLocation.bottom_row_left_ad(left)[1] %>
<% elsif AdLocation.bottom_row_left_ad(left)[0] == '1' && AdLocation.bottom_row_left_ad(left)[2] %>
	<%= link_to image_tag(AdLocation.bottom_row_left_ad(left)[1]), AdLocation.bottom_row_left_ad(left)[2].ensure_url, :popup => true %>
<% else %>
	<%= image_tag AdLocation.bottom_row_left_ad(left)[1] %>
<% end %>

