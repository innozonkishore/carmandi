<% if AdLocation.rightbar_ad(ad_page)[0] == '0' %>
	<%= AdLocation.rightbar_ad(ad_page)[1] %>
<% elsif AdLocation.rightbar_ad(ad_page)[0] == '1' && AdLocation.rightbar_ad(ad_page)[2] %>
	<%= link_to image_tag(AdLocation.rightbar_ad(ad_page)[1]), AdLocation.rightbar_ad(ad_page)[2].ensure_url, :popup => true %>
<% else %>
	<%= image_tag AdLocation.rightbar_ad(ad_page)[1] %>
<% end %>